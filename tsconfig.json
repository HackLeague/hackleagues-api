{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "pretty": true,
        "inlineSourceMap":true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/**.ts",
        "db/**/**.ts",
        "test/**/**.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}